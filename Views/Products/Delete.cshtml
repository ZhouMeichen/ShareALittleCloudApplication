        <div class="row">

            <h2 style="text-align:center;"><b>Delete</b></h2>
            <div style="float:right;">
                <button class="btn btn-info"><a asp-action="Index">Back to List</a></button>
            </div>
            <hr />
            <div class="col-md-4">
                <img class="img-responsive" src="data:image;base64,@System.Convert.ToBase64String(Model.ProductImage)" />
            </div>
            <div class="col-md-6">
                <br><br>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductName)
